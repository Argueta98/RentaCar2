@page
@model WebApp.Areas.Auto.Pages.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Eliminar Auto";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-page="Index">Inicio</a></li>
                    <li class="breadcrumb-item">Catalogos</li>
                    <li class="breadcrumb-item">Auto</li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col align-self-lg-end">
                <a asp-area="Auto" asp-page="Index" class="btn btn-outline-info float-right"><i class="fas fa-arrow-left"></i> Volver al Listado</a>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="card-title">Eliminar Registro</div>
            <div class="card-tools">
            </div>
        </div>
        <!-- form start -->

        <div class="card-body">

            <div class="row">
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Auto.Placa)
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Auto.Placa)
                </div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Auto.Marca)
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Auto.Marca)
                </div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Auto.Modelo)
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Auto.Modelo)
                </div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Auto.TipoAuto)
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Auto.TipoAuto)
                </div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Auto.Color)
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Auto.Color)
                </div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Auto.Combustible)
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Auto.Combustible)
                </div>
                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Auto.Estado)
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Auto.Estado)
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Auto.Id" />
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Delete</button> &nbsp;
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>.
    </div>
</section>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" language="javscript">
        $.validator.unobtrusive.parse(document);
        $(document).ready(function () {
            $('#a-auto').addClass('active');
        });</script>
}