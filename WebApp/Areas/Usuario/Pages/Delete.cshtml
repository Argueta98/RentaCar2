@page
@model WebApp.Areas.Usuario.Pages.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Eliminar Usuarios";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-page="Index">Inicio</a></li>
                    <li class="breadcrumb-item">Catalogos</li>
                    <li class="breadcrumb-item">Clientes</li>
                    <li class="breadcrumb-item">Usuarios</li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col align-self-lg-end">
                <a asp-area="Usuario" asp-page="Index" class="btn btn-outline-info float-right"><i class="fas fa-arrow-left"></i> Volver al Listado</a>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<section class="content">
    <div>
        <h4>Student</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario.DUI)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.DUI)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario.Nombres)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Nombres)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario.Apellidos)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Apellidos)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario.Genero)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Genero)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario.Direccion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Direccion)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Usuario.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>

</section>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" language="javscript">
    $.validator.unobtrusive.parse(document);
        $(document).ready(function () {
            $('#a-usuarios').addClass('active');
        });</script>
}
